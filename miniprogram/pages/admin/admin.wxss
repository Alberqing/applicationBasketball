.submitBtn {
    width: 100%;
    height: 45px;
    line-height: 45px;
    text-align: center;
    font-size: 16px;
    background: red;
    color: #fff;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    border-radius: 0;
}

.exchangeBtn {
    width: 50%;
    height: 45px;
    line-height: 45px;
    text-align: center;
    font-size: 16px;
    background: lightblue;
    color: #fff;
    position: fixed;
    bottom: 45px;
    left: 0;
    right: 0;
    border-radius: 8px;
}
