<!--miniprogram/pages/edit/edit.wxml-->
<view>
    <form bindsubmit="formSubmit" bindreset="formReset">
        <view class="section">
            <view class="section__title">标题</view>
            <input name="title" class="title-input" placeholder="在这里写下您的标题吧～" />
        </view>
        <view class="section">
            <view class="section__title">内容</view>
            <textarea name="content" class="content-input" placeholder="在这里写下你与辽篮的故事～"></textarea>
        </view>
        <view class="btn-area">
            <button form-type="submit" class="btn-submit">发表</button>
        </view>
    </form>
</view>