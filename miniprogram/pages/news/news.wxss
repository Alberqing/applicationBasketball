/* miniprogram/pages/news/news.wxss */

.container {
    width: 100%;
    background: #f4f4f4;
}

.news {
    display: flex;
    width: 95%;
    height: 120px;
    background: #fff;
    margin: 5px auto;
    font: 14px "Microsoft YaHei";
    border-radius: 8px;
}

.news:first-child {
    margin-top: 10px;
}

.text {
    flex-direction: row;
    width: 60%;
    margin: 8px;
}

.news-image {
    flex-direction: row;
    width: 30%;
    margin-top: 20px;
    margin-right: 4%;
}

.news-title {
    display: block;
    font: bold 16px "Microsoft YaHei";
}

.news-prompt {
    display: block;
    margin: 3px 0;
    font: 12px "Microsoft YaHei";
    color: rgb(94, 90, 90);
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.news-img {
    display: block;
    width: 110px;
    height: 80px;
}

.swiper {
    width: 100%;
    height: 240px;
}

.slide-image {
    width: 100%;
    height: 400px;
}

.slide-text {
    z-index: 999;
    color: rgb(241, 236, 236);
    position: fixed;
    bottom: 15px;
    left: 5px;
    right: 0;
    font: 12px "Microsoft YaHei";
}

.none-data {
    display: block;
    width: 100%;
    height: 30px;
    line-height: 30px;
    text-align: center;
    font-size: 12px;
    color: #000;
}
