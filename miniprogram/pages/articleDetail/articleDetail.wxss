/* miniprogram/pages/articleDetail/articleDetail.wxss */

.article-title {
    display: block;
    font: bold 16px;
    margin: 5px;
    width: 96%;
}

.article-time {
    display: block;
    margin: 5px;
    font-size: 12px;
    color: #8b8a8a;
}

.article-img {
    display: block;
    width: 95%;
    height: 220px;
    margin: 5px 2.5%;
}

.article-content {
    display: block;
    font-size: 14px;
    color: #1a1818;
    margin: 5px;
    text-indent: 2em;
}
