/* miniprogram/pages/news/news.wxss */

.container {
    width: 100%;
    background: #f4f4f4;
}

.article {
    display: flex;
    width: 95%;
    height: 120px;
    background: #fff;
    margin: 5px auto;
    font: 14px "Microsoft YaHei";
    border-radius: 8px;
}

.text {
    flex-direction: row;
    flex-wrap: wrap;
    width: 60%;
    margin: 8px;
}

.article-image {
    flex-direction: row;
    width: 30%;
    margin-top: 20px;
    margin-right: 4%;
}

.article-title {
    display: block;
    font: bold 14px "Microsoft YaHei";
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.article-prompt {
    display: block;
    margin: 3px 0;
    font: 12px "Microsoft YaHei";
    color: rgb(94, 90, 90);
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.article-img {
    display: block;
    width: 110px;
    height: 80px;
}

.article-time {
    display: block;
    font-size: 14px;
    margin-top: 10px;
}

.none-data {
    display: block;
    width: 100%;
    height: 30px;
    line-height: 30px;
    text-align: center;
    font-size: 12px;
    color: #000;
}
