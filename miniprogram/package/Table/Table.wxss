.scroll-table {
    white-space: nowrap;
    display: flex;
}

.table {
    display: inline-block;
    padding-left: 30px;
    width: 70px;
    height: 40px;
    line-height: 40px;
    font-size: 14px;
    text-align: center;
}

.table:first-child {
    padding-left: 0;
}

.table-title {
    background: rgb(170, 7, 7);
    color: #fff;
}

.table-data:nth-child(3n) {
    /* display: inline-block; */
    background: #f5f5f5;
}
